@model Telekomunikacije.Models.Topic

@{
    ViewBag.Title = "NewPost";
}



<a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
    <div class="d-flex w-100 justify-content-between">

        <h2 class="mb-1">@Model.Title </h2>
        @*<small>@item.Created</small>*@
    </div>
    <p class="mb-1">@Model.Description</p>
    @*<small>primer</small>*@
</a>
<br />
@using (Html.BeginForm("CreatePost", "Communication"))
{
    
    <div class="form-group">
        @Html.Label("Naslov")<br />
        @Html.TextBox("naslov",null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Kontent")
        @Html.TextArea("sadrzaj", new { @class = "form-control" })
    </div>

    @Html.Hidden("topicId", Model.Id)
    @Html.Hidden("id", Model.Id)
    <button type="submit" class="btn btn-primary">Dodajte Post</button>
    
}
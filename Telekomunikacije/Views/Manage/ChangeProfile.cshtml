@model Telekomunikacije.Models.ChangeProfileViewModel
@{
    ViewBag.Title = "Profil";
}

<h2>@Model.FirstName Ovde Mozete Modifikovati Vas Profil</h2>
<img src="@Url.Action("UserPhotos","Home")"style="width:160px;height:160px; background: #FFFFFF;
    margin: auto;
    -moz-border-radius: 60px;
    border-radius: 100px;
    padding: 6px;
    box-shadow: 0px 0px 20px #888;" />
@using (Html.BeginForm("Create", "Manage",FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
<div class="form-group">
    @Html.LabelFor(x => x.FirstName)<br />
    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.FirstName)
</div>
<div class="form-group">
    @Html.LabelFor(x => x.LastName)<br />
    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.LastName)
</div>
    <div class="form-group">
        @Html.LabelFor(x => x.PhoneNumber)<br />
        @Html.TextBoxFor(x => x.PhoneNumber,new { @class= "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.IndexNumber)<br />
        @Html.TextBoxFor(x => x.IndexNumber,new { @class= "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.BirthDay)<br />
        @Html.TextBoxFor(x => x.BirthDay,new { @class= "form-control"})
    </div>
    <div>
        @Html.LabelFor(x => x.UserPhoto)<br />
        

        <input type="file" name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
    </div>
    @Html.HiddenFor(x=>x.Id)
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Sacuvajte Izmene</button>

}

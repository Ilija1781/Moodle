@model Telekomunikacije.ViewModels.NewPostViewModel
@{
    ViewBag.Title = "Create";
}


<h1>New Post | @Model.TopicName</h1>

@using (Html.BeginForm("AddPost", "Post"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Content)
        @Html.TextAreaFor(x => x.Content, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(x=>x.TopicId)
    <button type="submit" class="btn btn-default">Dodaj Odgovor</button>
}

